@using AirMap.Controllers;
@using Microsoft.Extensions.Options
@inject IOptions<SocialMediaLinks> SocialMediaLinks


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AirMap</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    
    <!-- Boxicons CSS-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@2.1.4/css/boxicons.min.css">
    <!-- Cookies script-->
    <link rel="stylesheet" href="~/css/cookies.css" asp-append-version="true" />
    <script type="module" src="~/js/cookies.js" asp-append-version="true" defer></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="logo" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo.jpeg" alt="AirMap" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="menu-button">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">|&nbsp; Home &nbsp;|</a>
                        </li>
                        <li class="menu-button">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">|&nbsp; Privacy &nbsp;|</a>
                        </li>
                        <li class="menu-button">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="FAQ">|&nbsp; FAQ &nbsp;|</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div id="footerText">
            <span>
                <a asp-controller="Home" asp-action="Index">&copy; 2025 AirMap</a>, by <a href="@SocialMediaLinks.Value.Developer" target="_blank" rel="noopener noreferrer">Dawid Czernik</a>
                &nbsp; | &nbsp;<a  asp-controller="Home" asp-action="Privacy" target="_blank">Polityka prywatności</a> 
                &nbsp; | &nbsp;<a  asp-controller="Home" asp-action="TOS" target="_blank">Regulamin</a> <!-- TODO: fill in links for sub-sites -->
                &nbsp;| &nbsp;<a  asp-controller="Home" asp-action="Cookies" target="_blank">Ciasteczka</a> 
            </span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
    
    
    <!-- Cookie consent -->
    <div class="cookies">
        <header>
            <i class="bx bx-cookie"></i>
            <h2>Ciasteczka</h2>
        </header>
        <div class="data">
            <p>Ta strona używa plików cookies, aby zapewnić najlepsze wrażenia na naszej stronie.
                <span class="tab"></span>
                <a asp-area="" asp-controller="Home" asp-action="Cookies" target="_blank">Przeczytaj więcej...</a></p>
        </div>
        <div class="buttons">
            <button class="button" id="acceptButton">Zgadzam się</button>
            <button class="button">Odrzuć</button>
        </div>
    </div>

    </body>
</html>
